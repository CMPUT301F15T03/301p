<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/noFriendsSwipeLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_friends_message"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_marginTop="@dimen/no_friends_text_margin_top"/>
            <!--Source: http://xeogame.com/sites/xeogame.com/files/add_friends_icon.jpg. Date accessed: Nov 29, 2015-->
            <ImageView
                android:layout_width="223dp"
                android:layout_height="250dp"
                android:src="@drawable/no_friends_icon"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/no_friends_icon_margin_top"/>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>